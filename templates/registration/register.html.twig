{% extends 'base.html.twig' %}

{% block title %}Inscription Donateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 text-center">Inscription Donateur</h4>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(registrationForm.groupeSanguin, 'Groupe Sanguin', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.groupeSanguin, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Choisissez un mot de passe'}}) }}
                        </div>

                        <button type="submit" class="btn btn-danger w-100">S'inscrire</button>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <p>Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-danger">Connectez-vous ici</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}