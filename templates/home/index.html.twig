                    {% else %}
                        <a href="{{ path('app_register') }}" class="btn btn-danger btn-lg me-3">Devenir Donateur</a>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-danger btn-lg">Se Connecter</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}