{% extends 'base.html.twig' %}

{% block title %}Historique des Dons{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>üìä Historique des Dons</h1>
            <p class="lead">Historique complet de vos dons de sang</p>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">{{ dons|length }}</h3>
                    <p class="mb-0">Dons totaux</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-success">{{ dons|filter(d => d.apte)|length }}</h3>
                    <p class="mb-0">Dons valid√©s</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">
                        {% set totalQuantite = 0 %}
                        {% for don in dons %}
                            {% if don.apte %}
                                {% set totalQuantite = totalQuantite + don.quantite %}
                            {% endif %}
                        {% endfor %}
                        {{ totalQuantite }}ml
                    </h3>
                    <p class="mb-0">Sang donn√©</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">
                        {% if donateur.derniereDateDon %}
                            {{ donateur.derniereDateDon|date('d/m/Y') }}
                        {% else %}
                            -
                        {% endif %}
                    </h3>
                    <p class="mb-0">Dernier don</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des dons -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Liste de vos dons</h5>
        </div>
        <div class="card-body">
            {% if dons|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type de don</th>
                                <th>Quantit√©</th>
                                <th>Lieu</th>
                                <th>Statut m√©dical</th>
                                <th>Commentaire</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for don in dons %}
                            <tr>
                                <td>{{ don.dateDon|date('d/m/Y H:i') }}</td>
                                <td>
                                    <span class="badge bg-info">{{ don.typeDon }}</span>
                                </td>
                                <td>
                                    <strong>{{ don.quantite }}ml</strong>
                                </td>
                                <td>
                                    {% if don.rendezVous and don.rendezVous.collecte.lieu %}
                                        {{ don.rendezVous.collecte.lieu.nomLieu }}
                                    {% else %}
                                        <span class="text-muted">Non sp√©cifi√©</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if don.apte %}
                                        <span class="badge bg-success">‚úÖ Apt√©</span>
                                    {% else %}
                                        <span class="badge bg-danger">‚ùå Inapte</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if don.commentaire %}
                                        <small class="text-muted">{{ don.commentaire|u.truncate(30, '...') }}</small>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-4">
                    <div class="alert alert-info">
                        <h5>üì≠ Aucun don enregistr√©</h5>
                        <p class="mb-3">Vous n'avez pas encore effectu√© de don de sang.</p>
                        <a href="{{ path('app_collecte_index') }}" class="btn btn-primary">Prendre un premier rendez-vous</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Retour au dashboard -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="{{ path('app_donateur_dashboard') }}" class="btn btn-outline-secondary">
                ‚Üê Retour au tableau de bord
            </a>
        </div>
    </div>
</div>
{% endblock %}