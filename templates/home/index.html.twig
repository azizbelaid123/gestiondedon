                                {% else %}
                                    Non d√©fini
                                {% endif %}<br>
                                <strong>üë• Capacit√©:</strong> {{ collecte.capaciteMaximale }} personnes<br>
                                <strong>üìä Statut:</strong> 
                                <span class="badge bg-warning">{{ collecte.statut }}</span>
                            </p>
                        </div>
                        <div class="card-footer">
                            {% if app.user %}
                                <a href="#" class="btn btn-primary btn-sm">Prendre RDV</a>
                            {% else %}
                                <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-sm">S'inscrire</a>
                            {% endif %}
                            <a href="{{ path('app_collecte_index') }}" class="btn btn-outline-secondary btn-sm ms-1">D√©tails</a>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-12">
